<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/shape_dialog_bg">

    <TextView
        android:id="@+id/tv_megvii_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/check_fail"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_text_size" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_below="@id/tv_megvii_dialog_title"
        android:layout_marginTop="24dp"
        android:background="#979797" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_item_height"
        android:layout_below="@id/line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_megvii_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/check_end"
            android:textColor="@color/dialog_check_btn_color"
            android:textSize="@dimen/dialog_text_size" />
        <View
            android:layout_width="0.5dip"
            android:layout_height="@dimen/dialog_item_height"
            android:background="#979797" />
        <TextView
            android:id="@+id/tv_megvii_retry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/check_again"
            android:textColor="@color/dialog_check_btn_color"
            android:textSize="@dimen/dialog_text_size" />
    </LinearLayout>
</RelativeLayout>