<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_toast_bg"
    >

    <TextView
        android:id="@+id/tv_agreement_toast"
        android:layout_width="@dimen/agree_toast_width"
        android:layout_height="@dimen/agree_toast_height"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="@string/user_agreement_toast"
        android:textColor="@color/white"
        android:textSize="@dimen/agree_toast_text_size" />
</FrameLayout>
